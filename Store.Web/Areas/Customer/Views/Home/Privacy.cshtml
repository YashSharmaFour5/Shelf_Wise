@{
    ViewData["Title"] = "About Us";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">

            <!-- About Us Card -->
            <div class="card shadow rounded-3">
                <div class="card-header bg-dark text-white text-center">
                    <h2 class="my-2">About Us</h2>
                </div>
                <div class="card-body px-4 py-5">
                    <p class="lead">
                        Welcome to <strong>Shelf Wise BookStore</strong> — your trusted destination for discovering and buying great books.
                    </p>
                    <p>
                        At Shelf Wise BookStore, we are passionate about connecting readers with stories that matter. Whether you're into thrilling fiction, in-depth biographies, academic materials, or self-help guides, we aim to make books more accessible and enjoyable for everyone.
                    </p>
                    <p>
                        Our online platform is designed to deliver a smooth shopping experience with secure payments, user-friendly navigation, and fast delivery.
                    </p>
                    <h4 class="mt-4">Our Mission</h4>
                    <p>
                        To inspire and empower people through the love of reading, one book at a time.
                    </p>

                    <!-- Team Members Section -->
                    <h4 class="mt-5 mb-4 text-center">Meet Our Team</h4>
                    <div class="row text-center">
                        <!-- Member 1 -->
                        <div class="col-md-4 mb-4">
                            <div class="card h-100 shadow-sm border-0">
                                <img src="~/images/team/yash.jpg" class="card-img-top" alt="Yash Sharma" style="height: 300px; object-fit: cover;">
                                <div class="card-body">
                                    <h5 class="card-title">Yash Sharma</h5>
                                    <p class="card-text text-muted">Founder & Lead Developer</p>
                                </div>
                            </div>
                        </div>
                        <!-- Member 2 -->
                        <div class="col-md-4 mb-4">
                            <div class="card h-100 shadow-sm border-0">
                                <img src="~/images/team/tejas.jpg" class="card-img-top" alt="Tejas Patil" style="height: 300px; object-fit: cover;">
                                <div class="card-body">
                                    <h5 class="card-title">Tejas Patil</h5>
                                    <p class="card-text text-muted">Project Manager</p>
                                </div>
                            </div>
                        </div>
                        <!-- Member 3 -->
                        <div class="col-md-4 mb-4">
                            <div class="card h-100 shadow-sm border-0">
                                <img src="~/images/team/darshan.jpg" class="card-img-top" alt="Darshan Madnaik" style="height: 300px; object-fit: cover;">
                                <div class="card-body">
                                    <h5 class="card-title">Darshan Madnaik</h5>
                                    <p class="card-text text-muted">UI/UX Designer</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h4 class="mt-4">Contact Us</h4>
                    <ul>
                        <li>Email: support@swbookstore.com</li>
                        <li>Phone: +91-90826-81547</li>
                        <li>Location: Borivali (East), Mumbai, 400066</li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
</div>
